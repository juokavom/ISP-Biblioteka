@{
    ViewBag.Title = "El. pašto patvirtinimas";
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<body>
    <br />
    <br />
    <div class="container" style="margin-top:10%">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 alert alert-info">
                <div class="alert alert-warning" id="previous">
                    <strong style="padding-right: 15px">Patvirtinkite savo paskyrą</strong>
                    <input type="submit" class="btn btn-warning"  value="Patvirtinti" onclick="Verified()" />
                </div>
                <div class="alert alert-success" id="after" style="display:none">
                    <strong style="padding-right: 15px"><span class="glyphicon glyphicon-ok"></span> Jūsų paskyra suaktyvinta!</strong>
                    <button class="btn btn-success" back type="submit" onclick="reroute()">Prisijungti</button>
                </div>
            </div>
        </div>
    </div>
   
    <script>
        function reroute() {
            window.location.replace("Index/");
        }
        function Verified() {
            $.ajax({
                type: "post",
                url: "/Register/RegisterConfirm",
                data: { 'email': '@ViewBag.email' },
                success: function (msg) {
                    $("#previous").hide();
                    $("#after").show();
                    alert(msg);
                }
            })
        }
    </script>
</body>
</html>

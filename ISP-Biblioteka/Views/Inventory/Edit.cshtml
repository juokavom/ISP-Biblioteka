@model ISP_Biblioteka.Models.Inventory

@{
    ViewBag.Title = "Keisti inventorių";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Redaguoti</h2>

@using (Html.BeginForm("UpdateInventory", "Inventory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin:auto">
        <h4>Inventory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label for="count" class="control-label col-md-2">Kiekis</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.count, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.count, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="name" class="control-label col-md-2">Pavadinimas</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="cost" class="control-label col-md-2">Kaina</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="registrationDate" class="control-label col-md-2">Reg. data</label>
            <div class="col-md-10">
                <input type="date" name="registrationDate" value="@Model.registrationDate.Year-@Model.registrationDate.Month-@Model.registrationDate.Day" />
                @Html.ValidationMessageFor(model => model.registrationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="expirationDate" class="control-label col-md-2">Galiojimo terminas</label>
            <div class="col-md-10">
                <input type="date" name="registrationDate" value="@Model.expirationDate.Year-@Model.expirationDate.Month-@Model.expirationDate.Day"/>
                @Html.ValidationMessageFor(model => model.expirationDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Saugoti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Atgal", "Index")
</div>

<script>
    $('.datepicker').datepicker({
        inline: true
    });
</script>

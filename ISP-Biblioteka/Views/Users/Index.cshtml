@model List<ISP_Biblioteka.Models.User>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vartotojų valdymas</title>
</head>
<body>
    <br>
    <br>
    <h1 style="text-align:left">Sistemos vartotojai</h1>
    <p class="name"><a class="btn btn-primary" href="">Kurti naują vartotoją</a></p>
    <br>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>El.Paštas</th>
                <th>Tipas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ISP_Biblioteka.Models.User user in Model)
            {
                string type = "Skaitytojas";
                switch (user.Type)
                {
                    case 2:
                        type = "Bibliotekininkas";
                        break;
                    case 3:
                        type = "Administratorius";
                        break;
                }

            <tr>
                <th>@user.ID</th>
                <th>@user.Name</th>
                <th>@user.Surname</th>
                <th>@user.Email</th>
                <th>@type</th>
                @if (Session["id"].Equals(user.ID))
                {
                    <th><i>Esamas vartotojas</i></th>
                    <th></th>
                }
                else
                {
                    //<th><a class="btn btn-primary" onclick="Edit()">Redaguoti</th>
                    <th >@Html.ActionLink("Redaguoti", "Edit", "User", new { email = user.Email }, new { @class = "btn btn-primary" })</th>
                    <th><a class="btn btn-danger" href="">Pašalinti</th>
                }
            </tr>
            }
        </tbody>
    </table>
</body>
</html>

<style>
    .table {
        padding-top: 20px;
    }
</style>
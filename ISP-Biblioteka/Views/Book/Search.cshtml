<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Knygos paieška</title>
</head>
<body onload="start()">
    <br>
    <h1 style="text-align:left">Knygos paieška</h1>
    <div id="message1">
        <div class="alert alert-success">
            <span class="glyphicon glyphicon-ok"></span><strong>
                Rezultatai išvesti!<br />
            </strong>
        </div>
    </div>
    <div id="message2">
        <div class="alert alert-danger">
            <span class="glyphicon glyphicon-remove"></span><strong>Klaida! Patikrinkite įvedimo laukelius.</strong>
        </div>
    </div>
    <div class="modal-dialog two-col">
        <div class="modal-body col1">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th>Pavadinimas</th>
                        <th>Išleidimo data</th>
                        <th>Puslapių skaičius</th>
                        <th>ISBN</th>
                    </tr>
                </thead>
                <tbody>
                <tbody>
                    @foreach (ISP_Biblioteka.Models.Book book in Model)
                    {
                        if (book.Title == "Dievų miškas")
                        {
                            <tr id=@book.id>
                                <th>@book.id</th>
                                <th>@book.Title</th>
                                <th>@Convert.ToString(string.Format("{0:yyy/MM/dd}", book.Year))</th>
                                <th>@book.Pages</th>
                                <th>@book.ISBN</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>


        </div>
    </div>

</body>
</html>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Biblioteka 389", "AfterLogin", "Register", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (@Session["type"].Equals(2))
                    {
                        //Bibliotekininko pasiekiami langai
                    }
                    @if (@Session["type"].Equals(3))
                    {
                        //Administratoriaus pasiekiami langai
                        <li>@Html.ActionLink("Vartotojai", "Index", "Users")</li>
                    }
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown">
                            Paskyra
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Redaguoti duomenis", "Edit", "User", new { email = Session["email"]}, null)</li>
                            <li>@Html.ActionLink("Nuotrauka", "", "", new { email = Session["email"]}, null)</li>
                            <li>@Html.ActionLink("Keisti slaptažodį", "", "", new { email = Session["email"]}, null)</li>
                            <li>@Html.ActionLink("Naikinti paskyrą", "", "", new { email = Session["email"]}, null)</li>
                            @if (@Session["type"].Equals(1))
                            {
                                <li>@Html.ActionLink("Užsakymų istorija", "", "")</li>
                            }
                        </ul>
                    </li>
                </ul>
                <p class="name"><a class="btn btn-primary" href="/Register/Logout"> Atsijungti</a></p><p class="name sveiki"> Sveiki, @Session["name"]!</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Kaunas</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>

<style>
    .name {
        padding: 10px;
        padding-bottom: 0px;
        color: white;
        float: right;
    }

    .sveiki {
        padding-top: 18px;
    }

    .dropdown:hover .dropdown-menu {
        display: block;
        margin-top: 0;
    }
</style>